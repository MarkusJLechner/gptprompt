{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2021", "dom"],
    "ignoreDeprecations": "5.0",
    "strictNullChecks": false,
    "noImplicitAny": false
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
